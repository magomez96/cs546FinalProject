<form id="static-form" action="/login" method="post">
  <div class="form-group">
    <label for="username">Email</label>
    <input type="text" class="form-control" id="username" name="username" placeholder="" value="{{username}}" required>
  </div>
  <div class="form-group">
    <label for="pass">Password</label>
    <input type="password" class="form-control" id="pass" name="password" placeholder="" value="{{password}}" required>
  </div>
  </div>
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  {{#if logoutMsg}}
    <div class="alert alert-success">{{logoutMsg}}</div>
  {{/if}}
  <div class="loginBtn buttonAuth form-group">
    <button type="submit" class="btn btn-default">Enter</button>
  </div>
</form>
  <div class="signupBtn buttonAuth form-group">
    <form id="registration-button" action="/registration" method="get">
        <button type="submit" class="btn btn-default">Sign-up</button>
    </form>
  </div>