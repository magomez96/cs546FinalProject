<script type="text/javascript" src="public/js/products.js"></script>

<p>Don't see what you want? Add a new product to our database!</p>

<div class="center">
    <button id="button-product" class="btn btn-default" onclick="show('product')">Add New Product</button>
</div>

<form class="hidden" id="add-product" action="/products" method="post">
    <div class="form-group">
        <label for="upc">UPC</label>
        <input type="text" class="form-control" id="upc" name="upc" required />
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" required/>
    </div>
    <div class="form-group">
        <label for="pic">Link to Image</label>
        <input type="text" class="form-control" id="pic" name="pic" required />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
        <button class="btn btn-default btn-cancel" onclick="hide('product')">Cancel</button>
    </div>
</form>

<section id="productListContainer">
<ul class="productList">
    {{#each this}} {{#if product_name}}
    <li>
        <div class="productContainer">
            <h2>{{product_name}}</h2>
            <img src="{{product_picture}}" />
            <p>UPC: {{_id}}</p>

            <button class="btn btn-default" id="button-{{_id}}" onclick="show('{{_id}}')">Add to Inventory</button>

            <form class="hidden" id="add-{{_id}}" action="/items" method="post">
                <div class="form-group">
                    <label for="nick">Nickname</label>
                    <input type="text" class="form-control" id="nick" name="nick" required />
                </div>
                <div class="form-group hidden">
                    <label for="upc">UPC</label>
                    <input type="text" class="form-control" id="upc" name="upc" value="{{_id}}" />
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" min="1" value="1" required />
                </div>
                <div class="form-group">
                    <label for="purDate">Purchase Date</label>
                    <input type="date" class="form-control" id="purDate" name="purDate" required />
                </div>
                <div class="form-group">
                    <label for="expDate">Expiration Date</label>
                    <input type="date" class="form-control" id="expDate" name="expDate" required />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                    <button class="btn btn-default btn-cancel" onclick="hide('{{_id}}')">Cancel</button>
                </div>


            </form>
        </div>
    </li>
    {{/if}} {{/each}}
</ul>
</section>